# Gemini API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=your_api_key_here

# Algorand (TestNet) — for sending transactions. No KMD required.
ALGOD_SERVER=https://testnet-api.algonode.cloud
ALGOD_TOKEN=
ALGOD_PORT=

# Optional: server port (default 3000)
PORT=3000

# ── On-Chain Storage (ContractPigeon) ──────────────────────────────────────
# App ID of the deployed ContractPigeon smart contract
PIGEON_APP_ID=0

# Admin/deployer mnemonic (25-word Algorand mnemonic).
# Used ONLY to sign contract calls (onboardUser, etc.) — NOT for user wallets.
ADMIN_MNEMONIC=

# httpSMS configuration (https://httpsms.com)
HTTPSMS_API_KEY=your_httpsms_api_key
HTTPSMS_OWNER_PHONE=+18005550199
# Optional: webhook JWT signing key for signature validation (leave blank to skip in dev)
# HTTPSMS_WEBHOOK_SIGNING_KEY=your_webhook_signing_key
